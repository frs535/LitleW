<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LitleW.Views.Templates.CatalogItemTemplate">
    <ContentView.Content>
       <Grid>
           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="Auto"/>
               <ColumnDefinition Width="3"/>
               <ColumnDefinition Width="*"/>
           </Grid.ColumnDefinitions>
           <Label x:Name="lblName" Grid.Column="0" VerticalOptions="Center" />
           <Label Text=":" Grid.Column="1" Margin="-4,0,0,0" VerticalOptions="Center"/>
           <Label x:Name="lblValue" Grid.Column="2" VerticalOptions="Center" TextColor="Black"/>
       </Grid>
    </ContentView.Content>
</ContentView>
